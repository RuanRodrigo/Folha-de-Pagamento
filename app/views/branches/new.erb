<h1>Filiais</h1>
<h2>Novo Registro</h2>

<%= semantic_form_for @branch do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <%= f.input :name, label: "Nome" %>
    <%= f.input :address, label: "Endereço" %>
    <%= f.input :street_number, as: :string, label: "Número" %>
    <%= f.input :address_complement, label: "Complemento" %>
    <%= f.input :district, label: "Bairro" %>
    <%= f.input :city_id, as: :select, collection: City.all, label: "Cidade" %>
    <%= f.input :postal_code, as: :string, label: "Código Postal (CEP)" %>
    <%= f.input :phone_number, as: :string, label: "Número de Telefone" %>
    <br>
    <%= f.action :submit, label: "Criar Filial", button_html: { class: "btn btn-primary"} %>

<% end %>