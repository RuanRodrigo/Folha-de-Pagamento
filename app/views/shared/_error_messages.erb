<% if object.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-error">
        Este formulário contém <%= pluralize(object.errors.count, "erro") %>.
      </div>
      <ul class="validation-messages">
        <% object.errors.full_messages.each do |msg| %>
            <li>* <%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>